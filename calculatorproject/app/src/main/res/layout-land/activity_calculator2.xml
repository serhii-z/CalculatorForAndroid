<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/firstField"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="18sp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/operationField"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <EditText
        android:id="@+id/numberField"
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="@android:dimen/app_icon_size"
        android:inputType="phone" />
    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/numberField"
        android:layout_centerHorizontal="true">
        <Button
            android:id="@+id/b7"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="7"
            android:textSize="@android:dimen/app_icon_size"
            android:background="@drawable/my_round_button2"
            android:onClick="onNumberClick"/>
        <Button
            android:id="@+id/b8"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_toRightOf="@+id/b7"
            android:text="8"
            android:textSize="@android:dimen/app_icon_size"
            android:background="@drawable/my_round_button2"
            android:onClick="onNumberClick"/>
        <Button
            android:id="@+id/b9"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_toRightOf="@+id/b8"
            android:text="9"
            android:textSize="@android:dimen/app_icon_size"
            android:background="@drawable/my_round_button2"
            android:onClick="onNumberClick"/>
        <Button
            android:id="@+id/bplus"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_toRightOf="@+id/b9"
            android:text="+"
            android:textSize="@android:dimen/app_icon_size"
            android:background="@drawable/my_round_button"
            android:onClick="onOperationClick"/>
        <Button
            android:id="@+id/bminus"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_toRightOf="@+id/bplus"
            android:text="-"
            android:textSize="@android:dimen/app_icon_size"
            android:background="@drawable/my_round_button"
            android:onClick="onOperationClick"/>
        <Button
            android:id="@+id/ac"
            android:layout_weight="1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="AC"
            android:layout_toRightOf="@+id/bminus"
            android:textSize="@android:dimen/app_icon_size"
            android:background="@drawable/my_round_button"
            android:onClick="onClearClick"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/r2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/r1">
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/r3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/r2"
        android:layout_centerHorizontal="true">
        <Button
            android:id="@+id/b4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="4"
            android:textSize="@android:dimen/app_icon_size"
            android:background="@drawable/my_round_button2"
            android:onClick="onNumberClick"/>
        <Button
            android:id="@+id/b5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_toRightOf="@+id/b4"
            android:text="5"
            android:textSize="@android:dimen/app_icon_size"
            android:background="@drawable/my_round_button2"
            android:onClick="onNumberClick"/>
        <Button
            android:id="@+id/b6"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_toRightOf="@+id/b5"
            android:text="6"
            android:textSize="@android:dimen/app_icon_size"
            android:background="@drawable/my_round_button2"
            android:onClick="onNumberClick"/>
        <Button
            android:id="@+id/bcoma"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_toRightOf="@+id/b6"
            android:text="."
            android:textSize="@android:dimen/app_icon_size"
            android:background="@drawable/my_round_button2"
            android:onClick="onNumberClick"/>
        <Button
            android:id="@+id/bmult"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_toRightOf="@+id/bcoma"
            android:text="*"
            android:textSize="@android:dimen/app_icon_size"
            android:background="@drawable/my_round_button"
            android:onClick="onOperationClick"/>
        <Button
            android:layout_weight="1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_toRightOf="@+id/bmult"
            android:textSize="@android:dimen/app_icon_size"
            android:background="@drawable/my_round_button" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/r4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/r3"
        android:layout_centerHorizontal="true">
        <Button
            android:id="@+id/b0"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="0"
            android:textSize="@android:dimen/app_icon_size"
            android:background="@drawable/my_round_button2"
            android:onClick="onNumberClick"/>
        <Button
            android:id="@+id/b1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_toRightOf="@+id/b0"
            android:text="1"
            android:textSize="@android:dimen/app_icon_size"
            android:background="@drawable/my_round_button2"
            android:onClick="onNumberClick"/>
        <Button
            android:id="@+id/b2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_toRightOf="@+id/b1"
            android:text="2"
            android:textSize="@android:dimen/app_icon_size"
            android:background="@drawable/my_round_button2"
            android:onClick="onNumberClick"/>
        <Button
            android:id="@+id/b3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_toRightOf="@+id/b2"
            android:text="3"
            android:textSize="@android:dimen/app_icon_size"
            android:background="@drawable/my_round_button2"
            android:onClick="onNumberClick"/>
        <Button
            android:id="@+id/bdiv"
            android:layout_weight="1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_toRightOf="@+id/b3"
            android:text="/"
            android:textSize="@android:dimen/app_icon_size"
            android:background="@drawable/my_round_button"
            android:onClick="onOperationClick"/>
        <Button
            android:layout_weight="1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_toRightOf="@+id/bdiv"
            android:text="="
            android:textSize="@android:dimen/app_icon_size"
            android:background="@drawable/my_round_button3"
            android:onClick="onOperationClick"/>
    </RelativeLayout>

</RelativeLayout>